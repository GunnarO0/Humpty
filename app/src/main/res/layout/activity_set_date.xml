<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_on_primary"
    android:theme="@style/ThemeOverlay.Humpty.FullscreenContainer"
    tools:context=".ActivitySetDate">

    <TextView
        android:id="@+id/textView30"
        android:layout_width="130dp"
        android:layout_height="32dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/avenir_next_condensed"
        android:text="Set Date"
        android:textAlignment="center"
        android:textColor="@color/color_primary_variant"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider7"
        android:layout_width="318dp"
        android:layout_height="2dp"
        android:layout_marginTop="100dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#000000"
        android:backgroundTintMode="add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CalendarView
        android:id="@+id/calendarView"
        style="@android:style/Widget.DeviceDefault.CalendarView"
        android:layout_width="349dp"
        android:layout_height="321dp"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:focusedMonthDateColor="#FFFFFF"
        android:longClickable="false"
        android:maxDate="12/31/2030"
        android:minDate="12/01/2022"
        android:selectedWeekBackgroundColor="@color/color_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider7"
        tools:ignore="DuplicateClickableBoundsCheck" />

    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="252dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:editable="true"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />
</androidx.constraintlayout.widget.ConstraintLayout>